<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lutt" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!--        <item name="android:textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceLarge</item>-->
        <!--        <item name="android:textAppearanceSmallPopupMenu">@style/myPopupMenuTextAppearanceSmall</item>-->
    </style>


    <style name="Theme.Lutt.NoTitle" parent="Theme.Lutt">
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="MyButtonStyle">
        <item name="backgroundTint">@null</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:background">@drawable/rounded_transparent_bg</item>
    </style>

    <style name="HomeButtonParentLayoutStyle">
        <item name="android:layout_marginTop">@dimen/_7sdp</item>
        <item name="android:layout_marginBottom">@dimen/_7sdp</item>
        <item name="android:weightSum">2</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MyNeonButtonStyle">
        <item name="android:drawableLeft">@drawable/new_blink_gif</item>
        <item name="nb_cornerRadius">@dimen/_30sdp</item>
        <item name="nb_disabledStateColor">@color/gray</item>
        <item name="nb_enableAnimationDuration">1000</item>
        <item name="gb_rippleAnimationDuration">500</item>
        <item name="nb_gradientStart">@color/neon_color_start</item>
        <item name="nb_gradientEnd">@color/neon_color_end</item>
        <item name="android:layout_marginStart">@dimen/_1sdp</item>
        <item name="android:layout_marginEnd">@dimen/_1sdp</item>
    </style>

    <style name="MyNormalTextViewStyle">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MyNormalBoldTextViewStyle">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyMediumTextViewStyle">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MyMediumBoldTextViewStyle">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyLargeBoldTextViewStyle">
        <item name="android:textSize">@dimen/_25ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyExtraLargeBoldTextViewStyle">
        <item name="android:textSize">@dimen/_35ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Theme.DrewarApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DrewarApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
        <!--        <item name="android:textColor">@color/black</item>-->
    </style>

