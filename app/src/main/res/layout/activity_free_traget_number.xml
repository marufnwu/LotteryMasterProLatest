<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.free_target_number.FreeTargetNumberActivity">



    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layoutTutorial"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <FrameLayout
            android:id="@+id/imgContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="gone"
                android:scaleType="fitXY"
                android:id="@+id/imgBanner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"/>

            <com.skyfishjy.library.RippleBackground
                android:id="@+id/rippleBg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:rb_color="#636200EE"
                app:rb_duration="3000"
                app:rb_radius="@dimen/_15sdp"
                app:rb_rippleAmount="4"
                app:rb_scale="6">

                <ImageView
                    android:id="@+id/centerImage"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_baseline_play_circle_outline_24" />
            </com.skyfishjy.library.RippleBackground>

        </FrameLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnContinue"
            android:textColor="@color/white"
            android:text="Get Number"
            android:background="@drawable/version_update_btn"
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layoutInfo"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Spinner
            android:id="@+id/spinnerDistrict"
            android:textColor="@color/black"
            android:padding="@dimen/_10sdp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/text_input_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Spinner
            android:visibility="gone"
            android:id="@+id/spinnerCity"
            android:textColor="@color/black"
            android:padding="@dimen/_10sdp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/text_input_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



        <Spinner
            android:visibility="gone"
            android:id="@+id/spinnerVillage"
            android:textColor="@color/black"
            android:padding="@dimen/_10sdp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/text_input_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmit"
            android:textColor="@color/white"
            android:text="Submit"
            android:background="@drawable/version_update_btn"
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>