<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    android:orientation="vertical"
    android:focusable="true" android:focusableInTouchMode="true"
    tools:context=".ui.user_details.UserDetailsActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_margin="@dimen/_5sdp"
                android:visibility="gone"
                android:id="@+id/thumbnailLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@drawable/border_tv_bg"
                    android:id="@+id/ytthumbail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="@dimen/_200sdp"
                    android:adjustViewBounds="true"/>

                <com.skyfishjy.library.RippleBackground
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/content"
                    app:rb_color="#636200EE"
                    android:layout_gravity="center"
                    app:rb_radius="@dimen/_15sdp"
                    app:rb_rippleAmount="4"
                    app:rb_duration="3000"
                    app:rb_scale="6">
                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerInParent="true"
                        android:id="@+id/centerImage"
                        android:src="@drawable/ic_baseline_play_circle_outline_24"/>
                </com.skyfishjy.library.RippleBackground>

            </FrameLayout>

            <EditText
                android:id="@+id/edtName"
                android:inputType="textPersonName"
                android:hint="Full Name"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14sdp"
                android:background="@drawable/text_input_bg"
                android:layout_margin="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edtZila"
                android:inputType="text"
                android:hint="District"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14sdp"
                android:background="@drawable/text_input_bg"
                android:layout_margin="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edtThana"
                android:inputType="text"
                android:hint="Thana"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14sdp"
                android:background="@drawable/text_input_bg"
                android:layout_margin="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edtPostOffice"
                android:inputType="textPostalAddress"
                android:hint="Post Office"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14sdp"
                android:background="@drawable/text_input_bg"
                android:layout_margin="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edtVillage"
                android:inputType="text"
                android:hint="Village"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14sdp"
                android:background="@drawable/text_input_bg"
                android:layout_margin="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <EditText
                android:id="@+id/edtPinCode"
                android:inputType="numberDecimal"
                android:hint="Pin Code"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14sdp"
                android:background="@drawable/text_input_bg"
                android:layout_margin="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edtPhone"
                android:inputType="phone"
                android:hint="Phone Number"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14sdp"
                android:background="@drawable/text_input_bg"
                android:layout_margin="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edtWhatsappNum"
                android:inputType="phone"
                android:hint="Whatsapp Number"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14sdp"
                android:background="@drawable/text_input_bg"
                android:layout_margin="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <androidx.appcompat.widget.AppCompatButton
                android:textSize="@dimen/_20sdp"
                android:elevation="@dimen/_8sdp"
                android:id="@+id/btnSubmit"
                android:textColor="@color/white"
                android:text="Submit"
                android:background="@drawable/gradient_button_2"
                android:layout_margin="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="@dimen/_25sdp"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/white"
                android:visibility="gone"
                android:id="@+id/txt"
                android:background="@drawable/border_tv_bg"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>



</LinearLayout>